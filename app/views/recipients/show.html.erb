<p id="notice"><%= notice %></p>

<div class="panel panel-info container-fluid">
  <div class="row">
    <div class="col-sm-4 col-md-3">

      <div class="thumbnail-image">
        <%= image_tag @recipient.image.present? ? @recipient.image : "blank.jpg" %>
      </div>

      <p>
        <%= link_to 'Edit', edit_recipient_path(@recipient), class: "btn btn-info" %>
        <%= link_to 'Delete', @recipient, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        <%= link_to 'Back', recipients_path, class: "btn btn-default" %>
      </p>
    </div>
    <div class="col-sm-8 col-md-9">
      <h1><%= @recipient.first_name + " " + @recipient.last_name %></h1>

      <p>
        <b>Phone Number:</b>
        <%= @recipient.phone_number %>
      </p>

      <p>
        <b>Household Size:</b>
        <%= @recipient.household_size %>
      </p>

      <p>
        <b>Address:</b>
        <%= @recipient.address %>
      </p>

      <p>
        <b>City, State:</b>
        <%= @recipient.city %>
      </p>

      <p>
        <b>Zip:</b>
        <%= @recipient.zip %>
      </p>

      <p>
        <b>Notes:</b><br>
        <%= @recipient.public_note %><br>
        <%= @recipient.private_note %>
      </p>

      <p>
        <i>Please verify that all the information above is still valid. If so, continue with a new collection below. Otherwise, click Edit.</i>
      </p>
    </div>
  </div>
</div>

<div class="panel panel-info">
  <div class="panel-heading">
    <h2 class="panel-title">Collection History</h2>
  </div>
  <div class="panel-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= sortable "date", "Date" %></th>
          <th><%= sortable "action", "Status" %></th>
          <th><%= sortable "note", "Notes" %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <%= render @contacts %>
      </tbody>
    </table>
  </div>
  <div>
    <%= link_to 'New Collection', new_recipient_contact_path(@recipient), class: "btn btn-default" %>
  </div>
</div>
