<p id="notice"><%= notice %></p>

<h1>Recipient List</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= sortable "first_name", "First Name" %></th>
      <th><%= sortable "last_name", "Last Name" %></th>
      <th><%= sortable "phone_number", "Phone Number" %></th>
      <th><%= sortable "household_size", "Household Size" %></th>
      <th><%= sortable "address", "Address" %></th>
      <th><%= sortable "city", "City/State" %></th>
      <th><%= sortable "zip", "Zip" %></th>
      <th><%= sortable "public_note", "Note" %></th>
      <th><%= sortable "private_note", "" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @recipients%>
  </tbody>
</table>

<br>

<%= link_to 'New Recipient', new_recipient_path, class: "btn btn-primary" %>
