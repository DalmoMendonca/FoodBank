<p id="notice"><%= notice %></p>

<h1>Recipient List</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= sortable "firstName", "First Name" %></th>
      <th><%= sortable "lastName", "Last Name" %></th>
      <th><%= sortable "phoneNumber", "Phone Number" %></th>
      <th><%= sortable "householdSize", "Household Size" %></th>
      <th><%= sortable "address", "Address" %></th>
      <th><%= sortable "city", "City/State" %></th>
      <th><%= sortable "zip", "Zip" %></th>
      <th><%= sortable "publicNote", "Note" %></th>
      <th><%= sortable "privateNote", "" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @recipients%>
  </tbody>
</table>

<br>

<%= link_to 'New Recipient', new_recipient_path, class: "btn btn-primary" %>
